@model IEnumerable<UniversityManagementSystem.Models.AssignCourse>

@{
    ViewBag.Title = "Assigned courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Assigned Courses</h2>

 
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department.DepartmentCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teacher.TeacherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreditToBeTaken)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RemainingCredit)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Course.CourseCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department.DepartmentCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Teacher.TeacherName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreditToBeTaken)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RemainingCredit)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.AssignCourseId })
        </td>
    </tr>
}

</table>
